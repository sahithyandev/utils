---
interface Props {
	languages: Array<{
		name: string;
		url: string;
	}>;
}

const { languages } = Astro.props;
---

<section>
	<h2>Included Languages</h2>
	<ul class="list-none p-0 flex gap-2">
		{
			languages && languages.length > 0
				? languages.map((lang) => (
						<li class="m-0 block">
							<a
								href={lang.url}
								class="text-blue-600 hover:text-blue-800 no-underline w-fit transition-colors dark:text-blue-400 dark:hover:text-blue-300 font-semibold text-lg"
							>
								<div class="bg-gray-100 dark:bg-gray-800 rounded-lg shadow-md px-4 py-3 transition-colors min-w-52">
									{lang.name}
								</div>
							</a>
						</li>
					))
				: null
		}
	</ul>
</section>
